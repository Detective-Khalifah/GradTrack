<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="forgotPasswordThreeVM"
            type="com.blogspot.thengnet.modules.forgotpasswordthree.data.viewmodel.ForgotPasswordThreeVM" />
    </data>

    <LinearLayout
        android:id="@+id/constraintForgotPasswordOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageUndrawforgotp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_239pxv"
            android:layout_marginTop="@dimen/_74pxv"
            android:gravity="start"
            android:scaleType="fitXY"
            android:src="@drawable/undraw_forgot_password_re_hxwm"
            tools:ignore="ContentDescription"
            tools:src="@drawable/undraw_forgot_password_re_hxwm" />

        <TextView
            android:id="@+id/txtPasswordsucces"
            style="@style/txtRobotoromanregular16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_74pxh"
            android:layout_marginTop="@dimen/_179pxv"
            android:layout_marginEnd="@dimen/_74pxh"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="@dimen/_3pxh"
            android:singleLine="true"
            android:text="@{forgotPasswordThreeVM.forgotPasswordThreeModel.txtPasswordsucces}"
            tools:text="@string/msg_password_reset_successfully" />

        <Button
            android:id="@+id/btnSignIn"
            style="@style/btnSolidRounded"
            android:layout_width="@dimen/_92pxh"
            android:layout_height="@dimen/_40pxv"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_74pxh"
            android:layout_marginTop="@dimen/_1pxv"
            android:layout_marginEnd="@dimen/_74pxh"
            android:ellipsize="end"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="@dimen/_3pxh"
            android:singleLine="true"
            android:text="@string/lbl_sign_in"
            android:textAllCaps="false"
            tools:text="@string/lbl_sign_in" />
    </LinearLayout>
</layout>
