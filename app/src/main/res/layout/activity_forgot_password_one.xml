<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="forgotPasswordOneVM"
            type="com.blogspot.thengnet.modules.forgotpasswordone.data.viewmodel.ForgotPasswordOneVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintForgotPasswordOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearOneTimePwdOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_marginEnd="@dimen/_18pxh"
                android:gravity="start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageUndrawforgotp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_239pxv"
                    android:layout_marginTop="@dimen/_74pxv"
                    android:gravity="start"
                    android:scaleType="fitXY"
                    android:src="@drawable/undraw_forgot_password_re_hxwm"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/undraw_forgot_password_re_hxwm" />

                <TextView
                    android:id="@+id/txtPleaseenterth"
                    style="@style/txtRobotoromanregular16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18pxh"
                    android:layout_marginTop="@dimen/_38pxv"
                    android:layout_marginEnd="@dimen/_18pxh"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="@dimen/_7pxh"
                    android:text="@{forgotPasswordOneVM.forgotPasswordOneModel.txtPleaseenterth}"
                    tools:text="@string/msg_please_enter_the_otp" />

                <LinearLayout
                    android:id="@+id/linearOneTimePwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15pxv"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_56pxv"
                        android:layout_weight="0.25"
                        android:gravity="center_horizontal">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/txtRobotoregular16_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="@dimen/_14pxh"
                            android:layout_marginEnd="@dimen/_14pxh"
                            android:inputType="number|numberSigned"
                            android:letterSpacing="0.02"
                            android:lineSpacingExtra="@dimen/_13pxh"
                            android:singleLine="true"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_56pxv"
                        android:layout_weight="0.25"
                        android:gravity="center_horizontal">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/txtRobotoregular16_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="@dimen/_14pxh"
                            android:layout_marginEnd="@dimen/_14pxh"
                            android:inputType="number|numberSigned"
                            android:letterSpacing="0.02"
                            android:lineSpacingExtra="@dimen/_13pxh"
                            android:singleLine="true"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_56pxv"
                        android:layout_weight="0.25"
                        android:gravity="center_horizontal">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/txtRobotoregular16_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="@dimen/_14pxh"
                            android:layout_marginEnd="@dimen/_14pxh"
                            android:inputType="number|numberSigned"
                            android:letterSpacing="0.02"
                            android:lineSpacingExtra="@dimen/_13pxh"
                            android:singleLine="true"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_56pxv"
                        android:layout_weight="0.25"
                        android:gravity="center_horizontal">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/txtRobotoregular16_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="@dimen/_14pxh"
                            android:layout_marginEnd="@dimen/_14pxh"
                            android:inputType="number|numberSigned"
                            android:letterSpacing="0.02"
                            android:lineSpacingExtra="@dimen/_13pxh"
                            android:singleLine="true"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnResetPassword"
                    style="@style/btnSolidRounded"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40pxv"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_18pxh"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_marginEnd="@dimen/_18pxh"
                    android:gravity="center"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="@dimen/_3pxh"
                    android:singleLine="true"
                    android:text="@string/reset_password"
                    android:textAllCaps="false"
                    tools:text="@string/reset_password" />

                <TextView
                    android:id="@+id/txtDidntreceive"
                    style="@style/txtRobotoromanregular14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18pxh"
                    android:layout_marginTop="@dimen/_32pxv"
                    android:layout_marginEnd="@dimen/_18pxh"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="@dimen/_3pxh"
                    android:singleLine="true"
                    android:text="@{forgotPasswordOneVM.forgotPasswordOneModel.txtDidntreceive}"
                    tools:text="@string/msg_didn_t_receive" />

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
